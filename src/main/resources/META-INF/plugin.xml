<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.risenmyth.psimcpserverplus</id>
    <name>PSI-MCP-Server-Plus</name>
    <vendor>risenmyth</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="com.github.risenmyth.psimcpserverplus.startup.MyProjectActivity" />
        <applicationConfigurable
                parentId="tools"
                id="com.github.risenmyth.psimcpserverplus.settings"
                displayName="PSI MCP Server Plus"
                instance="com.github.risenmyth.psimcpserverplus.settings.McpServerConfigurable"/>
    </extensions>
</idea-plugin>
